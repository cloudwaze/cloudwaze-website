---
import BaseLayout from '../layouts/BaseLayout.astro';

const openPositions = [
  {
    title: "Cloud Solutions Architect",
    location: "Irving, TX",
    type: "Full-time",
    description: "Design and implement cloud solutions using AWS, Azure, and GCP.",
    requirements: [
      "8+ years of experience in IT with 5+ years in cloud technologies",
      "Strong experience with AWS, Azure, or GCP",
      "Experience with infrastructure as code (Terraform, CloudFormation)",
      "Strong understanding of cloud security and compliance",
      "Experience with containerization and orchestration"
    ]
  },
  {
    title: "Senior Cloud Engineer",
    location: "Irving, TX",
    type: "Full-time",
    description: "Lead cloud migration and modernization projects for enterprise clients.",
    requirements: [
      "6+ years of experience in cloud engineering",
      "Strong background in DevOps practices",
      "Experience with microservices architecture",
      "Expertise in cloud-native technologies",
      "Strong communication and leadership skills"
    ]
  },
  {
    title: "Cloud Security Specialist",
    location: "Remote",
    type: "Full-time",
    description: "Implement and maintain cloud security solutions across multiple platforms.",
    requirements: [
      "5+ years of experience in cloud security",
      "CISSP, CCSP, or equivalent certifications",
      "Experience with compliance frameworks (SOC2, HIPAA, PCI)",
      "Knowledge of security automation and tools",
      "Incident response experience"
    ]
  }
];

const benefits = [
  {
    icon: "clock",
    title: "Flexible Hours",
    description: "Work with flexible schedules that fit your lifestyle"
  },
  {
    icon: "growth",
    title: "Growth Opportunities",
    description: "Round-the-clock opportunities for professional development"
  },
  {
    icon: "remote",
    title: "Remote Work",
    description: "Remote work facilities for better work-life balance"
  },
  {
    icon: "health",
    title: "Health Initiatives",
    description: "Comprehensive health and wellness programs"
  },
  {
    icon: "money",
    title: "Competitive Pay",
    description: "Biannual pay raises and performance bonuses"
  },
  {
    icon: "learning",
    title: "Learning Programs",
    description: "CloudWaze-sponsored learning & recognition programs"
  }
];

const stats = [
  { number: "100+", label: "Cloud Projects" },
  { number: "50+", label: "Enterprise Clients" },
  { number: "95%", label: "Employee Satisfaction" },
  { number: "4.8/5", label: "Glassdoor Rating" }
];

const values = [
  {
    icon: "lightbulb",
    title: "Innovation",
    description: "We embrace new technologies and ideas"
  },
  {
    icon: "users",
    title: "Collaboration",
    description: "We work together to achieve greatness"
  },
  {
    icon: "chart-line",
    title: "Growth",
    description: "We invest in continuous learning"
  }
];
---

<BaseLayout
  title="Careers"
  description="Join CloudWaze and help organizations transform through cloud technology"
>
  <div class="pt-20">
    <!-- Hero Section with Animated Background -->
    <div class="relative bg-gradient-to-r from-blue-900 to-blue-700 text-white overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-blue-800/90"></div>
        <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-20"></div>
      </div>
      <div class="relative py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl">
            <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in">
              Work. Play. <span class="text-blue-300">Grow.</span>
            </h1>
            <p class="text-xl text-blue-100 mb-8 animate-fade-in-delay">
              Behind every business and technological accomplishment is a great mind. At CloudWaze, we take pride in pursuing untraveled paths and employing unique perspectives to innovate the state of modern business.
            </p>
            <div class="flex gap-4 animate-fade-in-delay-2">
              <a 
                href="#apply"
                class="group bg-white text-blue-900 px-8 py-4 rounded-lg font-medium hover:bg-blue-50 transition-all transform hover:scale-105"
              >
                Join Our Team
                <span class="inline-block ml-2 transition-transform group-hover:translate-x-1">â†’</span>
              </a>
              <a 
                href="#benefits"
                class="group border-2 border-white text-white px-8 py-4 rounded-lg font-medium hover:bg-white hover:text-blue-900 transition-all"
              >
                Learn More
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="bg-white py-12 -mt-16 relative z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-xl shadow-xl">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 p-8">
            {stats.map(stat => (
              <div class="text-center text-white">
                <div class="text-3xl md:text-4xl font-bold mb-2">{stat.number}</div>
                <div class="text-blue-100">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Values Section -->
    <div class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold mb-4">Our Values</h2>
          <div class="w-20 h-1 bg-blue-600 mx-auto"></div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {values.map(value => (
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 bg-blue-100 rounded-full mb-6 flex items-center justify-center mx-auto">
                <i class={`fas fa-${value.icon} text-blue-600 text-2xl`}></i>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-center">{value.title}</h3>
              <p class="text-gray-600 text-center">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Benefits Section with Hover Effects -->
    <div id="benefits" class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold mb-4">Why Join CloudWaze?</h2>
          <div class="w-20 h-1 bg-blue-600 mx-auto mb-8"></div>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            We believe that great minds need equally supportive conditions to thrive. Here's what we offer:
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {benefits.map(benefit => (
            <div class="group bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="w-16 h-16 bg-blue-100 rounded-lg mb-6 flex items-center justify-center group-hover:bg-blue-600 transition-colors">
                <i class={`fas fa-${benefit.icon} text-blue-600 group-hover:text-white text-2xl transition-colors`}></i>
              </div>
              <h3 class="text-xl font-semibold mb-3">{benefit.title}</h3>
              <p class="text-gray-600">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Enhanced Application Form -->
    <div id="apply" class="py-20 bg-gray-50">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white p-8 rounded-xl shadow-xl">
          <h2 class="text-3xl font-bold text-center mb-8">Join Our Team</h2>
          <div class="w-20 h-1 bg-blue-600 mx-auto mb-12"></div>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors"
                />
              </div>
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
              />
            </div>
            
            <div>
              <label for="skills" class="block text-sm font-medium text-gray-700">Skills</label>
              <textarea 
                id="skills" 
                name="skills" 
                rows="3"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
              ></textarea>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
              ></textarea>
            </div>
            
            <div>
              <button 
                type="submit"
                class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white px-8 py-4 rounded-lg font-medium hover:from-blue-700 hover:to-blue-800 transition-all transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              >
                Submit Application
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out;
  }
  
  .animate-fade-in-delay {
    animation: fadeIn 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }
  
  .animate-fade-in-delay-2 {
    animation: fadeIn 0.8s ease-out 0.4s forwards;
    opacity: 0;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style> 