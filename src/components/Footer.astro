<footer class="bg-gray-900 text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center">
      <!-- Logo -->
      <a href={import.meta.env.BASE_URL || '/'}>
        <img 
          src="https://cloudwaze.com/wp-content/uploads/2021/09/Cloudwaze-Logo-1-2048x683.png"
          alt="CloudWaze"
          class="h-16 w-auto mb-8 brightness-0 invert"
        />
      </a>
      
      <!-- Navigation Links -->
      <div class="grid grid-cols-2 gap-8 mb-8">
        {footerLinks.map(section => (
          <div>
            <h3 class="text-lg font-semibold mb-4">{section.title}</h3>
            <ul class="space-y-2">
              {section.links.map(link => (
                <li>
                  <a 
                    href={`${import.meta.env.BASE_URL}${link.href}`}
                    class="text-gray-400 hover:text-white transition-colors"
                  >
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
      
      <!-- Tagline -->
      <p class="text-xl text-gray-400 mb-8">
        Piloting Smooth and Secure Cloud Journeys
      </p>
      
      <!-- Social Links -->
      <div class="flex space-x-6">
        {socialLinks.map(link => (
          <a 
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label={link.name}
          >
            <Fragment set:html={link.icon} />
          </a>
        ))}
      </div>
    </div>
  </div>
</footer> 