---
const heroSlides = [
  {
    title: "Smart and Secure Cloud Enablement and Management",
    description: "Helping enterprises navigate through the complex cloud landscape with confidence and security.",
    image: "/images/hero/cloud-management.jpg",
    link: "/services"
  },
  {
    title: "Cloud Migration & Modernization",
    description: "Seamlessly migrate and modernize your applications with our proven methodology and expertise.",
    image: "/images/hero/cloud-migration.jpg",
    link: "/services/consulting"
  },
  {
    title: "Cloud Analytics & Intelligence",
    description: "Transform your data into actionable insights with our advanced analytics solutions.",
    image: "/images/hero/cloud-analytics.jpg",
    link: "/services/analytics"
  }
];

const partners = [
  { name: "AWS", logo: "/images/partners/aws.png" },
  { name: "Microsoft Azure", logo: "/images/partners/azure.png" },
  { name: "Google Cloud", logo: "/images/partners/gcp.png" },
  { name: "Oracle Cloud", logo: "/images/partners/oracle.png" },
  { name: "Salesforce", logo: "/images/partners/salesforce.png" }
];
---

<section class="relative">
  <!-- Hero Slider -->
  <div class="relative h-screen min-h-[600px] max-h-[800px]">
    {heroSlides.map((slide, index) => (
      <div 
        class={`hero-slide absolute inset-0 ${index === 0 ? 'active' : ''}`}
        style={`background-image: url(${slide.image})`}
      >
        <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-blue-800/75"></div>
        <div class="relative h-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center">
          <div class="max-w-2xl text-white">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
              {slide.title}
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-blue-100">
              {slide.description}
            </p>
            <div class="flex gap-4">
              <a 
                href={slide.link}
                class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-medium transition-colors"
              >
                Learn More
              </a>
              <a 
                href="/contact"
                class="border-2 border-white hover:bg-white hover:text-blue-900 text-white px-8 py-4 rounded-lg font-medium transition-colors"
              >
                Contact Us
              </a>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Partners Section -->
  <div class="bg-white py-12 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-center text-gray-600 mb-8">Trusted by leading organizations and certified by major cloud providers</p>
      <div class="flex justify-center items-center flex-wrap gap-8 md:gap-12">
        {partners.map(partner => (
          <img 
            src={partner.logo} 
            alt={partner.name}
            class="h-12 md:h-16 w-auto grayscale hover:grayscale-0 transition-all"
          />
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-slide {
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
    pointer-events: none;
  }

  .hero-slide.active {
    opacity: 1;
    pointer-events: auto;
  }
</style>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.hero-slide');
  
  function nextSlide() {
    slides[currentSlide].classList.remove('active');
    currentSlide = (currentSlide + 1) % slides.length;
    slides[currentSlide].classList.add('active');
  }

  setInterval(nextSlide, 5000);
</script> 